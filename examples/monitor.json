{
  "id": 0,
  "name": "CPU is high on {{host.name}}",
  "type": "metric alert",
  "query": "avg(last_4h):anomalies(avg:system.cpu.user{*}, 'basic', 2, direction='both', alert_window='last_15m', interval=60, count_default_zero='true') >= 1",
  "message": "Some other info..\n\n{{#is_alert}}Possible explanations are x, y or z. Check blah, blah blah.{{/is_alert}} \n\n{{#is_warning}}CPU is at an acceptable level again{{/is_warning}} \n\n@all ",
  "tags": ["team-cpu"],
  "options": {
    "notify_audit": false,
    "locked": true,
    "timeout_h": 0,
    "silenced": {},
    "groupby_simple_monitor": true,
    "new_host_delay": 300,
    "require_full_window": true,
    "notify_no_data": true,
    "renotify_interval": 0,
    "evaluation_delay": 70,
    "escalation_message": "",
    "no_data_timeframe": 10,
    "include_tags": true,
    "thresholds": {
      "critical": 1,
      "critical_recovery": 0
    },
    "threshold_windows": {
      "trigger_window": "last_15m",
      "recovery_window": "last_15m"
    },
    "queryConfig": {
      "logset": {
        "name": "*"
      },
      "track": "logs",
      "timeRange": {
        "to": 1616759698501,
        "live": true,
        "from": 1616745298501
      },
      "queryString": "source:my_source",
      "indexes": ["*"],
      "queryIsFailed": false
    },
    "aggregation": {
      "metric": "count",
      "type": "count",
      "groupBy": "core_service"
    }
  },
  "priority": 2,
  "classification": "log"
}
